generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id          String    @id @default(uuid())
  name        String    @unique
  price       Float
  capacity    Int?
  description String?
  images      String?   // comma-separated: "img1.jpg,img2.jpg" or JSON string
  amenities   String?   // comma-separated: "wifi,parking,pool" or JSON string
  bookings    Booking[]
}

model Booking {
  id        Int           @id @default(autoincrement())
  roomId    String
  room      Room          @relation(fields: [roomId], references: [id], onDelete: Cascade)

  checkIn   DateTime
  checkOut  DateTime
  guests    Int

  name      String
  email     String
  phone     String
  message   String?

  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([roomId, checkIn, checkOut])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  REJECTED
}